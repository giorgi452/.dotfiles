general {
        colors = true
        interval = 5
}

order += "tztime greeting"
order += "volume master"
order += "wireless wlan0"
order += "battery 0"
order += "memory"
order += "tztime local"

tztime greeting {
    format = "I use Arch BTW "
    timezone = "UTC"  # Doesn't matter what timezone is used, we're only using it to display the text
}

volume master {
    format = " ï€¨ : %volume "
    format_muted = " î»¨ : muted "
    device = "default"
    mixer = "Master"
}

wireless wlan0 {
        format_up = " ï‡« : (%quality at %essid, %bitrate) %ip "
        format_down = " ó°–ª : down "
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining "
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "%used "
        threshold_degraded = "10% "
        format_degraded = "MEMORY: %free "
}

disk "/" {
        format = "%free "
}

read_file uptime {
        path = "/proc/uptime"
}
